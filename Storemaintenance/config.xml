    <modules>
        <Mage_Log>
            <version>1.6.1.1</version>
        </Mage_Log>
    </modules>
    <global>
        <ignoredModules>
            <entities>
                <install/>
                <adminhtml/>
                <admin/>
            </entities>
        </ignoredModules>
        <ignore_user_agents>
