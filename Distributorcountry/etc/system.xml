<config>
    
    <sections>
        <harriswebworks_distributorcountry translate="label" module="harriswebworks_distributorcountry">
            <class>separator-top</class>
            <label>Distributor Countries</label>
            <tab>harriswebworks</tab>
            <frontend_type>text</frontend_type>
            <sort_order>502</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="harriswebworks_distributorcountry">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <distributorcountry_enabled translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </distributorcountry_enabled>
                        <admin_ips translate="label">
                            <label>Admin Ips</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<comment>Add multiple ip separated with comma (,). </comment>
                        </admin_ips>
                    </fields>
                </general>
            </groups>
        </harriswebworks_distributorcountry>
    </sections>
</config>
